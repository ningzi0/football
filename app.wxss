page{
    background: #f3f4f8;
    --td-brand-color: #2e46a7;
}


.playerPic{
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    overflow: hidden;
    background-color: #eee;
}
.playerPic image{
    width: 100%;
    height: 100%;
}
.playerItem{
    display: flex;
    align-items: center;
    background-color: #fff;
}
/* .playerItem:nth-child(even){
    background-color: #f9f9f9;
} */
.playerTitleInfo{
    padding: 0 10rpx;
    min-width: 35%;
}
.playerName{
    font-size: 28rpx;
}
.playerName text{
    display: block;
}
.PersonalInfo{
    font-size: 24rpx;
    color: #acacac;
}
.playerInfo{
    font-size: 26rpx;
    text-align: center;
    min-width: 23%;
}

.playerInfo text{
    display: block;
}
.playerImg{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    overflow: hidden;
}
.playerImg image{
    width: 100%;
    height: 100%;
}
.playerlevel{
    min-width: 12%;
}
.colorA{
    color: #44ddae;
}
.colorB{
    color: #8ab95d;
}
.colorC{
    color: #a9ae54;
}


.sticky{
    background-color: #fff;
    padding-bottom: 1rpx;
}
.playerWrap{
    margin-top: 20rpx;
}

.price{
    font-size: 24rpx;
    color: rgb(255, 145, 0);
}
.playerContainerItem{
    display: flex;
    background: #fff;
    align-items: center;
    border-bottom: 1px solid #eee;
    padding: 15rpx 10rpx;
    position: relative;
}
.playerContainerItem .t-checkbox--block{
    padding: 0;
}
.playerContainerItem .t-badge{
    position: absolute !important;
}
.playerContainerItem navigator{
    width: 100%;
}