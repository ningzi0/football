/* pages/transaction/transaction.wxss */
.t-tabs{
    background: none !important;
}
.bigger {
    --tab-font-size: 32rpx;
  }

  .item{
      background: #fff;
      padding:50rpx 20rpx;
      display: flex;
      align-items: center;
      margin: 20rpx;
      border-radius: 15rpx;
      box-shadow: 0 15rpx 10rpx rgba(15, 90, 211, 0.05);
  }
  .item .pic{
      width: 90rpx;
      height: 90rpx;
      border-radius: 50%;
      overflow: hidden;
      background: #f9f9f9;
  }
  .item .pic image{
      width: 100%;
      height: 100%;
  }
  .item .i-item text{
        display: block;
        padding: 0 20rpx;
  }
  .item .i-item text.name{
      font-size: 34rpx;
      font-weight: bold;
  }
  .item .i-item text.time{
      font-size: 24rpx;
      color: rgb(163, 163, 163);
  }
.price{
    flex: 2;
    text-align: right;
    font-weight: bold;
}
.item .i-item .t-tag{
    margin: 0 5rpx !important;
}
.item .i-item .t-tag.t-tag--extra-large {
    padding: 0 10rpx;
}
.offer{
    margin: 10rpx 0;
}




