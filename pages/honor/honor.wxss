.rankingContainer{
  padding: 0 0 20rpx;
}
.rankingCtitle{
  display: flex;
  align-items: center;
  padding: 0 0 20rpx;
}
.rankingCtitle text{
  flex: 1;
  color: #afb3b6;
  font-size: 24rpx;

}
.rankingCtitle text:nth-child(2){
  flex: 2;
}

.rankingCtitle text:last-child{
  text-align: right;
}
.rankingContent .item{
  display: flex;
  align-items: center;
  padding: 0 15rpx;
}
.rankingContent .item:nth-child(odd){
  background: #f3f4f8;
}
.rankingContent .img-name{
  display: flex;
  align-items: center;
  padding-left: 0;
}
.rankingContent .img-name image{
  width: 50rpx;
  height: 50rpx;
}
.rankingContent .img-name text{
  font-size: 24rpx;
  padding: 0 0;
}
.unify {
  flex: 1;
  padding: 15rpx 0rpx;
}
.img-name{
  flex: 2;
}
.jifen{
  text-align: right;
}

.item .num text{
  display: block;
