/* pages/ranking/ranking.wxss */
.rankTop{
  background-color: #d83e3e;
  color: #fff;
  padding: 80rpx 40rpx 130rpx 40rpx;
}
.rankTop .h1{
  font-size: 86rpx;
  font-weight: bold;
}
.rankTop .text{
  font-size: 28rpx;
  opacity: 0.7;
  margin-top: 10rpx;
}

.rankContainer{
  background-color: #fff;
  margin: -80rpx 20rpx 0;
  border-radius: 20rpx ;
  overflow: hidden;
  min-height: 300rpx;
}



.t-cell__title-text,.t-cell__note{
  font-size: 28rpx !important;
}
.honorTitle{
  display: flex;
  color: #505b73;
  background-color: #f3f4f8;
}
.honorTitle .text{
  flex: 1;
  padding: 32rpx;
}
.center{
  text-align: center;
}
.right{
  text-align: right;
}
.honorC_item{
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.honorC_item .text{
  flex: 1;
  padding: 32rpx;
}
.honorC_item .text image{
  width: 70rpx;
  height: 70rpx;
  display: block;
}
.honorC_item .text text{
  font-size: 34rpx;
  font-weight: bold;
}










.honorCon{
  padding: 30rpx;
}
