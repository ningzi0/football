/* pages/my/my.wxss */
.myheader{
    background-color: #2e46a7;
    padding: 50rpx;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #fff;
}

.myheader .pic{
    background: #f5f5f5;
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 25rpx;
}
.myheader .pic image{
    width: 100%;
    height: 100%;
}
.playerName .name{
    font-size: 38rpx;
    font-weight: bold;
    margin-bottom: 15rpx;
    display: flex;
    align-items: center;
}
.p_name{
    display: flex;
    align-items: center;
}
.p_name text{
    margin-right: 15rpx;
    display: block;
}

.mycontent .t-cell-group--card{
    margin: 35rpx;
}
